%h1 Notifications#edit
%p Find me in app/views/notifications/new.html.haml
= form_for @notification, url: notification_path(@notification),
html: { method: :put } do |f|
  = f.label :notification_type, "Notification type:"
  = f.text_field :notification_type, class: 'form-control'
  = f.label :timer_days
  = f.text_field :timer_days, class: 'form-control'
  = f.collection_check_boxes :id, Team.all, :id, :name.to_s, checked: teams(@notification)
  %br
  = f.submit "Update notification", class: "btn btn-primary"
